<div class="container d-flex justify-content-center mt-5">
  <div class="row w-100">
    <!-- Search Input -->
    <div class="col-md-8">
      <%= form_with url: users_path, method: :get, local: true, class: "d-flex mb-3" do %>
        <div class="input-group">
          <span class="input-group-text">
            <i class="fa-solid fa-location-dot"></i>
          </span>
          <%= text_field_tag :query, params[:query], class: "form-control", type: "search", placeholder: "Search location", "aria-label": "Search" %>
        </div>
        <%= submit_tag "Search", class: "btn btn-info ms-3" %>
      <% end %>
    </div>

    <!-- Filter Icon -->
    <div class="col-md-2 d-flex justify-content-center align-items-center">
      <div class="border rounded p-2 d-flex justify-content-center align-items-center">
        <i class="fa-solid fa-filter"></i>
      </div>
    </div>
  </div>
</div>

<!-- Display User Cards -->
<div class="container mt-4">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4 mb-3">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%= user.image_url %>" alt="User Image">
          <div class="card-body">
            <h5 class="card-title"><%= user.name %></h5>
            <p class="card-text">
              <strong>Age:</strong> <%= user.age %><br>
              <strong>Gender:</strong> <%= user.gender %><br>
              <strong>Location:</strong> <%= user.location %>
            </p>
            <h6>Activities:</h6>
            <% user.activities.each do |activity| %>
              <p>- <%= activity.name %> | $<%= activity.price %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
