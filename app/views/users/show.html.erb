<div class ='user-details'>
  <div class ='profile-picture'>
    <%= image_tag @user.image_url, class: "avatar"%>
  </div>

  <div class ='user-info'>
    <h2> <%= @user.name %> | <%= @user.age %> | <%= @user.gender %></h2>
      <p>Location: <%= @user.location %></p>
      <p>Description: <%= @user.description%></p>
  </div>
</div>
