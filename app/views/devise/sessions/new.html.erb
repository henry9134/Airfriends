<div class="login-container" style="max-width: 400px; margin: auto; background-color: #ffffff; padding: 30px; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15); margin-top: 100px;">
  <h2 style="text-align: center; color: #333;">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'form-control', placeholder: 'Email' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: 'form-control', placeholder: 'Password' } %>
      <%= f.input :remember_me, as: :boolean, label: 'Remember me', class: 'form-check-input' if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions" style="text-align: center;">
      <%= f.button :submit, "Log in", class: 'btn btn-primary', style: 'margin-bottom: 10px; width: 100%;' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
